            placeholder: 'Nh·∫≠p kh·∫©u hi·ªáu c·ªßa website...'
          }
        ]
      case 'members':
        return [
          { name: 'name', label: 'T√™n th√†nh vi√™n', type: 'text', required: true },
          { name: 'nickname', label: 'Bi·ªát danh', type: 'text', required: true },
          { 
