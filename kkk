    }
  ],
  gallery: [
    { id: 1, url: 'https://images.unsplash.com/photo-1516589178581-6cd7833ae3b2?w=400', caption: 'Team celebration' }
  ],
  videos: [
    { id: 1, url: 'https://www.youtube.com/embed/dQw4w9WgXcQ', title: 'Year in Review' }
  ],
  // ƒê√É X√ìA BEST MOMENTS
  guestbook: [
    { id: 1, name: 'Alex', message: 'Amazing team!', date: '2024-12-10', likes: 12 }
  ],
  momentsWall: [
    { id: 1, image: 'https://images.unsplash.com/photo-1492684223066-81342ee5ff30?w=400', caption: 'Sunset vibes', sticker: 'üåÖ', likes: 15, comments: [] }
  ]
}

export const DataProvider = ({ children }) => {
  const [data, setData] = useState(() => {
    try {
      const saved = localStorage.getItem('purpleAuroraData')
      if (saved) {
        const parsed = JSON.parse(saved)
        return {
          siteSettings: { ...initialData.siteSettings, ...parsed.siteSettings },
          members: parsed.members || initialData.members,
          achievements: parsed.achievements || initialData.achievements,
          gallery: parsed.gallery || initialData.gallery,
          videos: parsed.videos || initialData.videos,
          // Kh√¥ng c√≤n bestMoments
          guestbook: parsed.guestbook || initialData.guestbook,
          momentsWall: parsed.momentsWall || initialData.momentsWall
        }
      }
    } catch (error) {
      console.error('Error loading from localStorage:', error)
    }
    return initialData
  })

  // Save to localStorage whenever data changes
  useEffect(() => {
    try {
      localStorage.setItem('purpleAuroraData', JSON.stringify(data))
    } catch (error) {
      console.error('Error saving to localStorage:', error)
    }
  }, [data])

  const addItem = (category, item) => {
    setData(prev => ({
      ...prev,
      [category]: [...(prev[category] || []), { 
        ...item, 
        id: Date.now(),
        date: item.date || new Date().toISOString().split('T')[0]
      }]
    }))
  }

  const updateItem = (category, id, updates) => {
    setData(prev => ({
      ...prev,
      [category]: (prev[category] || []).map(item => 
        item.id === id ? { ...item, ...updates } : item
      )
    }))
  }

  const deleteItem = (category, id) => {
    setData(prev => ({
      ...prev,
      [category]: (prev[category] || []).filter(item => item.id !== id)
    }))
  }

  const updateSiteSettings = (updates) => {
    setData(prev => ({
      ...prev,
      siteSettings: { ...prev.siteSettings, ...updates }
    }))
  }

  return (
    <DataContext.Provider value={{ 
      data, 
      addItem, 
      updateItem, 
      deleteItem, 
      updateSiteSettings 
    }}>
      {children}
    </DataContext.Provider>
  )
}
EOF

